<div class="grid">
  <div class="gutter-sizer"></div>
  <div class="grid-sizer"></div>
    <% @images.each do |image| %>
  	  	<div class="<%= (image.scale == 2) ? 'grid-item grid-item--width2' : 'grid-item' %>">
      		<% if (image.filename != nil) %> 
      			<%= image_tag image.filename %>
      		<% else %>
      			<%= image_tag image.uri.url %>
      		<% end %>
      		<a class="test_link" href="#">
      		<p class="link_title"><%= (image.info != nil) ? image.info.html_safe : "Default"%></p>
     		</a>
  		</div>

	<% end %>
 
</div>


